<tr class="row">
  <td class="col-md-1">
    <%= link_to product.name, product_path(product) %></td>
  <td class="col-md-3"><%= product.description %></td>
  <td class="col-md-1"><%= product.price %></td>
  <td class="col-md-3">
  </td>
  <td class="col-md-2">
    <div class="row">
      <%= form_tag "/cart/#{product.id}", method: :patch do %>
    <div class="col-md-5">
      <%= number_field_tag :quantity, {}, value: quantity, min: "1" %>
    </div>
    <div class="col-md-7">
      <%= submit_tag "", class: "btn btn-info"%>
      <i class="fa fa-refresh"></i>
    </div>
    <% end %>
    </div>
  </td>
  <td class="col-md-1">
  </td>
  <td class="col-md-2">
    <p class="empty-one">
      <i class="fa fa-trash-o"></i>
      <%= link_to t(".delete"), "/cart/#{product.id}/delete",
        method: :delete, data: {confirm: t(".delete_confirm")},
        class: "btn btn-danger" %>
    </p>
  </td>
</tr>
