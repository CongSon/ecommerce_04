<header class="header">
  <div class="header-limiter">
    <h1><%= link_to t(".app_name"), root_path, id: "logo" %>
      <span class="books"></span>
    </h1>
    <ul>
      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-user"></i><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".settings"), edit_user_registration_path %></li>
            <li>
              <%= link_to t(".log_out"), destroy_user_session_path,
                method: :delete %>
            </li>
          </ul>
        </li>
        <li>
          <a href="/cart" class="fa fa-cart-arrow-down">
            (<%= session[:cart].present? ? session[:cart].size : 0 %>)
          </a>
        </li>
      <% else %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
           <i class="fa fa-user"></i> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(".log_in"), new_user_session_path %></li>
            <li><%= link_to t(".sign_up"), new_user_registration_path %></li>
            <li><%= link_to t(".sign_in"), user_facebook_omniauth_authorize_path,
              class: "fa fa-facebook-official"%>
            </li>
          </ul>
        </li>
        <li>
          <a href="/cart" class="fa fa-cart-arrow-down">
            (<%= session[:cart].present? ? session[:cart].size : 0 %>)
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</header>
